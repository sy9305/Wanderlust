<% layout("/layouts/boilerplate") %>

<body>

    <div id="filters">
        <div class="filter">
            <a href="/listing/filter?q=Trending" class="filter-anchor">
                <div class=""><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listing/filter?q=Mountains" class="filter-anchor">
                <div class=""><i class="fa-solid fa-mountain-sun"></i></div>
                <p>Mountains</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listing/filter?q=Pools" class="filter-anchor">
                <div class=""><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listing/filter?q=Beaches" class="filter-anchor">
                <div class=""><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beaches</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listing/filter?q=Cities" class="filter-anchor">
                <div class=""><i class="fa-solid fa-city"></i></div>
                <p>Iconic Cities</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listing/filter?q=Rooms" class="filter-anchor">
                <div class=""><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listing/filter?q=Farms" class="filter-anchor">
                <div class=""><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listing/filter?q=Camping" class="filter-anchor">
                <div class=""><i class="fa-solid fa-tent"></i></div>
                <p>Camping</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listing/filter?q=Castle" class="filter-anchor">
                <div class=""><i class="fa-solid fa-place-of-worship"></i></div>
                <p>Castle</p>
            </a>
        </div>

        <div class="filter">
            <a href="/listing/filter?q=Arctic" class="filter-anchor">
                <div class=""><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </a>
        </div>

    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListing){ %>
            <a href=" /listing/<%= listing._id %> " class="listing-link">
                <div class="card index-card mt-3">
                    <img src="<%= listing.image.path %>" class="listing-card-img-top" alt="listingImage">
                    <div class="listing-card-body">
                        <p class="card-text"><b><%= listing.title %></b></p>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> / Night
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>

